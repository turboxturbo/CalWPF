<Window x:Class="CalWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalWPF"
        mc:Ignorable="d"
        WindowStyle="SingleBorderWindow" 
        ResizeMode="NoResize"
        Icon="C:\Users\212302\source\repos\CalWPF\CalWPF\Images\i.webp"
        Title="Apple calculator" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Grid.Column="0" Grid.Row="1" Content="1" Click="Button_Click" x:Name="OneBTN" FontWeight="Bold"/>
        <Button Grid.Column="1" Grid.Row="1" Content="2" Click="Button_Click" FontWeight="Bold"/>
        <Button Grid.Column="2" Grid.Row="1" Content="3" Click="Button_Click" FontWeight="Bold"/>
        <Button Grid.Column="3" Grid.Row="1" Content="=" Click="Button_Click_1" Background="AliceBlue"  FontWeight="Bold"/>

        <Button Grid.Column="0" Grid.Row="2" Content="4" Click="Button_Click" FontWeight="Bold"/>
        <Button Grid.Column="1" Grid.Row="2" Content="5" Click="Button_Click" FontWeight="Bold"/>
        <Button Grid.Column="2" Grid.Row="2" Content="6" Click="Button_Click" FontWeight="Bold"/>
        <Button Grid.Column="3" Grid.Row="2" Content="*" Click="Button_Click" FontWeight="Bold"/>

        <Button Grid.Column="0" Grid.Row="3" Content="7" Click="Button_Click" FontWeight="Bold"/>
        <Button Grid.Column="1" Grid.Row="3" Content="8" Click="Button_Click" FontWeight="Bold"/>
        <Button Grid.Column="2" Grid.Row="3" Content="9" Click="Button_Click" FontWeight="Bold"/>
        <Button Grid.Column="3" Grid.Row="3" Content="/" Click="Button_Click" FontWeight="Bold"/>

        <Button Grid.Column="0" Grid.Row="4" Content="+" Click="Button_Click" FontWeight="Bold"/>
        <Button Grid.Column="1" Grid.Row="4" Content="-" Click="Button_Click" FontWeight="Bold"/>
        <Button Grid.Column="2" Grid.Row="4" Content="0" Click="Button_Click" FontWeight="Bold"/>
        <Button Grid.Column="3" Grid.Row="4" Content="AC" Click="Button_Click_2" Background="AliceBlue" FontWeight="Bold"/>

        <Button Grid.Column="0" Grid.Row="5" Content="log10" FontWeight="Bold" Click="Button_Click_6"/>
        <Button Grid.Column="1" Grid.Row="5" Content="Back" Click="Button_Click_4" FontWeight="Bold"/>
        <Button Grid.Column="2" Grid.Row="5" Content="←" Click="Button_Click_3" FontWeight="Bold"/>
        <Button Grid.Column="3" Grid.Row="5" Content="√" FontWeight="Bold" Click="Button_Click_5"/>

        <Button Grid.Column="0" Grid.Row="6" Content="sin" FontWeight="Bold" Click="Button_Click_7"/>
        <Button Grid.Column="1" Grid.Row="6" Content="cos" FontWeight="Bold" Click="Button_Click_8"/>
        <Button Grid.Column="2" Grid.Row="6" Content="x^2" FontWeight="Bold" Click="Button_Click_9"/>
        <Button Grid.Column="3" Grid.Row="6" Content="." FontWeight="Bold" Click="Button_Click"/>

        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" x:Name="outputTB" Margin="10" FontWeight="Bold" />

    </Grid>
</Window>
